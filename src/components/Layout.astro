---
import HtmxPath from "htmx.org/dist/htmx.min.js?url";
import LoginLogout from "@src/components/LoginLogout.astro";

const statusMessage = Astro.props.statusMessage;
const title = Astro.props.title || "Astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline src={HtmxPath}></script>
  </head>
  <body>
    <header>
      {statusMessage && <p>{statusMessage}</p>}
      <LoginLogout />
          
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html {
    background-color: lightgray;
  }

  body {
    background-color: white;
    padding: 2rem;
    font-family: system-ui;
    max-width: 60rem;
    margin-inline: auto;
  }
</style>
